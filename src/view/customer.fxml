<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.Customers">
    <children>

        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>

                <HBox alignment="CENTER_LEFT" minHeight="60.0">
                    <children>

                        <Label fx:id="partScreenLabel" text="Customer" HBox.hgrow="ALWAYS">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                            </padding>
                            <font>
                                <Font name="System Bold Italic" size="16.0"/>
                            </font>
                        </Label>
                        <HBox alignment="CENTER_LEFT" spacing="40.0" HBox.hgrow="ALWAYS">
                            <children>

                                <RadioButton fx:id="inHouseRadioBtn" mnemonicParsing="false"
                                             selected="true" text="In-House">
                                    <toggleGroup>
                                        <ToggleGroup fx:id="toggleGroup1"/>
                                    </toggleGroup>
                                </RadioButton>
                                <RadioButton fx:id="outsourcedRadioBtn" mnemonicParsing="false"
                                             text="Outsourced"
                                             toggleGroup="$toggleGroup1"/>
                            </children>

                            <padding>
                                <Insets left="40.0"/>
                            </padding>
                        </HBox>
                    </children>

                </HBox>
                <VBox>
                    <children>

                        <HBox alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
                            <children>

                                <Label minWidth="120.0" text="ID">
                                    <HBox.margin>
                                        <Insets left="60.0"/>
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="partIDTextField" disable="true"/>
                            </children>

                            <padding>
                                <Insets bottom="20.0" right="20.0" top="20.0"/>
                            </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
                            <children>

                                <Label minWidth="120.0" text="Name">
                                    <HBox.margin>
                                        <Insets left="60.0"/>
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="partNameTextField" promptText="Part Name"/>
                            </children>

                            <padding>
                                <Insets bottom="20.0" right="20.0" top="20.0"/>
                            </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
                            <children>

                                <Label minWidth="120.0" text="Inventory">
                                    <HBox.margin>
                                        <Insets left="60.0"/>
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="partInvTextField" promptText="Amount in Stock"/>
                            </children>

                            <padding>
                                <Insets bottom="20.0" right="20.0" top="20.0"/>
                            </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
                            <children>

                                <Label minWidth="120.0" text="Cost / Unit">
                                    <HBox.margin>
                                        <Insets left="60.0"/>
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="partCostTextField" promptText="Price per Unit"/>
                            </children>

                            <padding>
                                <Insets bottom="20.0" right="20.0" top="20.0"/>
                            </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
                            <children>

                                <Label minWidth="120.0" text="Min">
                                    <HBox.margin>
                                        <Insets left="60.0"/>
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="partMinTextField" prefWidth="85.0" promptText="Minimum"/>
                                <Label minWidth="40.0" text="Max">
                                    <HBox.margin>
                                        <Insets left="20.0"/>
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="partMaxTextField" prefWidth="85.0" promptText="Maximum"/>
                            </children>

                            <padding>
                                <Insets bottom="20.0" right="20.0" top="20.0"/>
                            </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
                            <children>

                                <Label fx:id="partMacCoLabel" minWidth="120.0" text="Machine ID">
                                    <HBox.margin>
                                        <Insets left="60.0"/>
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="partMacCoTextField" promptText="Machine Identifier"/>
                            </children>

                            <padding>
                                <Insets bottom="20.0" right="20.0" top="20.0"/>
                            </padding>
                        </HBox>
                    </children>

                </VBox>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>

                        <Button fx:id="partSaveBtn" minWidth="100.0" mnemonicParsing="false"
                                onAction="#clickSaveCustomer"
                                style="-fx-background-color: black;" text="Save" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="13.0"/>
                            </font>
                        </Button>
                        <Button fx:id="partCancelBtn" minWidth="100.0" mnemonicParsing="false"
                                onAction="#clickCancelCustomer" style="-fx-background-color: black;" text="Cancel"
                                textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="13.0"/>
                            </font>
                        </Button>
                    </children>

                    <padding>
                        <Insets bottom="30.0" top="40.0"/>
                    </padding>
                </HBox>
            </children>

        </VBox>
    </children>
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>

</AnchorPane>
